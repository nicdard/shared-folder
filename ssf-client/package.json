{
  "name": "ssf-client",
  "version": "1.0.0",
  "description": "Node CLI for the Secure Folder System",
  "main": "main.ts",
  "bin": {
    "ssf-client": "./dist/main.js"
  },
  "scripts": {
    "clean": "rm -r ./dist",
    "copy-private-files": "mkdir -p ./dist/private/ca && cp -r ../private/ca/ca_cert.pem dist/private/ca/ca_cert.pem",
    "build": "tsc && chmod +x ./dist/main.js",
    "clean-build": "npm run clean && npm run build && npm run copy-private-files",
    "start": "npm run build && node ./dist/main.js", 
    "clean-start": "npm run clean-build && node ./dist/main.js",
    "openapi-ts": "tsx openapi.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Nicola Dardanis",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@commander-js/extra-typings": "^12.0.1",
    "@hey-api/openapi-ts": "^0.42.1",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.12.10",
    "@types/ssf": "file:../ssf/pkg",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.58.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.39.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "sass": "^1.64.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "tsx": "^4.9.0",
    "typescript": "^5.0.4",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "commander": "^12.0.0",
    "common": "file:../common/nodejs",
    "conf": "^12.0.0",
    "https": "^1.0.0"
  }
}
