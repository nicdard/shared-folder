{
  "name": "www",
  "version": "1.0.0",
  "description": "TS Client for the Secure Shared Folder System.",
  "private": true,
  "type": "module",
  "scripts": {
    "openapi-ts": "openapi-ts",
    "generate-types": "openapi-typescript ../openapi/pki-openapi.yml --output src/types/pkiapi.ts",
    "start": "webpack serve --env dev --open",
    "format": "prettier --ignore-path .eslintignore --write '**/**/*.{js,ts,tsx}'",
    "lint": "eslint --ignore-path .eslintignore './src/**/*.{js,ts,tsx}'",
    "test": "jest --verbose --watch",
    "test:ci": "jest --verbose --forceExit",
    "preversion": "npm-run-all format lint",
    "postversion": "git push && git push --tags",
    "prod": "webpack --env prod",
    "build": "npm-run-all format lint prod"
  },
  "author": "Nicola Dardanis",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "ssf": "file:../ssf/pkg"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.42.1",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.0",
    "@types/ssf": "file:../ssf/pkg",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.58.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.39.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "openapi-fetch": "^0.9.5",
    "openapi-typescript": "^6.7.5",
    "prettier": "^2.8.7",
    "sass": "^1.64.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3",
    "webpack-merge": "^5.8.0"
  }
}
